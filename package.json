{
  "name": "create-ai-portfolio",
  "version": "1.0.0",
  "description": "AI-first portfolio generator with intelligent optimization for LLM discovery and SEO",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "create-ai-portfolio": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run clean && npm run build:cli && npm run build:templates",
    "build:cli": "tsc --project tsconfig.cli.json",
    "build:templates": "astro build",
    "build:watch": "tsc --project tsconfig.cli.json --watch",
    "preview": "astro preview",
    "astro": "astro",
    "typecheck": "tsc --noEmit --project tsconfig.cli.json && astro check",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-llms": "tsx scripts/generate-llms.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "clean": "rimraf dist coverage .tsbuildinfo",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm run test:ci && npm run typecheck && npm run build",
    "postpublish": "git push --follow-tags",
    "cli": "node dist/cli/index.js",
    "release": "npm run build && npm run test:ci && changeset publish",
    "release:beta": "npm run build && npm run test:ci && changeset publish --tag beta",
    "version:patch": "changeset version && npm run build",
    "version:minor": "changeset version && npm run build",
    "version:major": "changeset version && npm run build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepare-publish": "node scripts/prepare-publish.js",
    "validate-build": "node scripts/build-validation.js",
    "release:manual": "node scripts/release.js"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.1",
    "astro": "^4.15.11",
    "tailwindcss": "^3.4.13",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "axios": "^1.6.0",
    "semver": "^7.5.4",
    "puppeteer": "^21.5.0",
    "cheerio": "^1.0.0-rc.12",
    "glob": "^10.3.10",
    "yaml": "^2.3.4",
    "marked": "^9.1.6",
    "date-fns": "^2.30.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.6",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/semver": "^7.5.5",
    "@types/validator": "^13.11.6",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@changesets/cli": "^2.27.8",
    "@changesets/changelog-github": "^0.5.0",
    "eslint": "^9.13.0",
    "eslint-plugin-astro": "^1.2.4",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "conventional-changelog-cli": "^4.1.0",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "ai",
    "portfolio",
    "llm",
    "seo",
    "optimization",
    "generator",
    "cli",
    "astro",
    "tailwind",
    "structured-data",
    "schema-org",
    "llms-txt",
    "typescript",
    "template"
  ],
  "author": "AI Portfolio Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-portfolio/create-ai-portfolio"
  },
  "bugs": {
    "url": "https://github.com/ai-portfolio/create-ai-portfolio/issues"
  },
  "homepage": "https://ai-portfolio.dev",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "astro": ">=3.0.0",
    "tailwindcss": ">=3.3.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{astro,md,json,yaml,yml}": [
      "prettier --write"
    ]
  }
}